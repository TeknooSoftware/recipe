{
    "name": "teknoo/recipe",
    "type": "library",
    "description": "Inspired by cooking, allows the creation of dynamic workflow, called here recipe, following the #east programming and using middleware, configurable via DI or any configuration, if a set of conditions (ingredients) are available.",
    "keywords": ["east", "middleware", "workflow", "recipe", "dynamic"],
    "homepage": "http://teknoo.software/recipe",
    "license": ["MIT"],
    "authors": [
        {
            "name": "Richard DÃ©loge",
            "email": "richarddeloge@gmail.com",
            "role":"Software architect, Lead developer"
        }
    ],
    "support": {
        "issues": "https://github.com/TeknooSoftware/recipe/issues",
        "source": "https://github.com/TeknooSoftware/recipe/"
    },
    "require":{
        "php": "~7.4",
        "teknoo/states": "^4.0.9",
        "teknoo/immutable": "^2.0.0"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "phpunit/phpunit": "~9.1",
        "squizlabs/php_codesniffer": "~3.5",
        "pdepend/pdepend": "~2.8",
        "phpstan/phpstan": "^0.12.26",
        "sebastian/phpcpd": "~5.0",
        "phploc/phploc": "~6.0",
        "behat/behat": "~3.7"
    },
    "autoload": {
        "psr-4": {
            "Teknoo\\Recipe\\": ["src/"],
            "Teknoo\\Tests\\Recipe\\": ["tests/"]
        }
    },
    "minimum-stability": "stable",
    "archive": {
        "exclude": ["features", "vendor", ".idea"]
    },
    "extra": {
        "thanks": {
            "name": "teknoo/states",
            "url": "https://github.com/TeknooSoftware/states"
        }
    }
}
